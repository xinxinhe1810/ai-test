{
  "name": "@ai-test/monorepo",
  "private": true,
  "version": "0.0.1-beta.2",
  "packageManager": "pnpm@7.17.0",
  "scripts": {
    "build": "pnpm -r --filter='./packages/**' run build",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "typecheck": "tsc --noEmit",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --dry-run --access public",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@jest/globals": "^29.5.0",
    "@rollup/plugin-alias": "^4.0.2",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.0",
    "bumpp": "^9.1.0",
    "esbuild": "^0.17.18",
    "eslint": "^8.39.0",
    "fast-glob": "^3.2.12",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.0",
    "rollup": "^3.20.2",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "simple-git-hooks": "^2.8.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
